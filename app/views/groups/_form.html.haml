= form_for(@group) do |f|
  - if @group.errors.any?
    #error_explanation
      %h2
        = pluralize(@group.errors.count, "error")
        prohibited this group from being saved:
      %ul
        - @group.errors.full_messages.each do |message|
          %li= message
  
  .field.buffer.thrice
    = f.label :title
    .wide-text
      = f.text_field :title
  
  .field.buffer.thrice
    = f.label :description
    .wide-text
      = f.text_area :description
  
  .actions.buffer.thrice
    = f.submit 'Save', class: 'btn btn-default'
    = link_to 'Cancel', root_path, class: 'btn btn-default'