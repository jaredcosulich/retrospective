.comment
  %p= comment.comment 
  .float-right.small
    = link_to 'Edit', edit_board_item_comment_path(@board, @item, comment)
    &nbsp; &nbsp; | &nbsp; &nbsp;
    = link_to 'Delete', board_item_comment_path(@board, @item, comment), method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'}
  .small.left
    = comment.user.name unless comment.user.blank?
    &nbsp; &nbsp; | &nbsp; &nbsp; 
    = time_ago_in_words(comment.created_at).capitalize
    
  