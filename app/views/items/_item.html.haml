.row.item{id: "item-#{item.id}"}
  .col-sm-12.buffer.twice   
    .inner{class: "#{item.column_name}-grad"}
      %p.center= link_to(item.title, board_item_path(@board, item))
      .row.small.center
        .col-sm-4    
          - if item.comments.length <= 0
            = link_to('Add Comment', new_board_item_comment_path(@board, item))
          - else                           
            = link_to(pluralize(item.comments.length, 'Comment'), board_item_comments_path(@board, item))
    
        .col-sm-4                  
          = link_to("<span class='vote-count'>#{pluralize(item.votes.length, 'Vote')}</span>".html_safe, board_item_votes_path(@board, item), title: item.votes_list, alt: item.votes_list)                      
          &nbsp;
          |
          &nbsp;
          %a.slidebutton{data: {slideclosest: '.item', slidefind: '.inline-vote-form'}} Vote
          / = link_to('Vote', new_board_item_vote_path(@board, item))

        .col-sm-4                  
          = link_to('Edit', edit_board_item_path(@board, item))                    
          &nbsp;
          |
          &nbsp;
          = link_to('Delete', board_item_path(@board, item), method: :delete, data: {confirm: 'Are you sure you want to delete this item?'})
    
      = render partial: 'votes/inline_form', locals: {item: item, vote: item.votes.new(user_name: @last_user_name)}
        
        