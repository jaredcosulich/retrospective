.row
  - ['good', 'meh', 'bad'].each do |column_grouping|
    - column_name = @board["#{column_grouping}_column_name"]
    
    .column.col-sm-12.col-md-4
      .row
        .col-sm-12
          %h4.title= column_name
    
      .row.buffer
        .col-sm-12.center
          = link_to('Add Item', new_board_item_path(@board, column_name: column_name), class: 'btn btn-default')
      .row
        .col-sm-12    
          - @board.items.for_column(column_name).each do |item|
            .row
              .col-sm-12.buffer.twice   
                .item
                  %p= item.title
                  .row.small.center
                    .col-sm-6                  
                      = link_to_if(item.comments.length > 0, pluralize(item.comments.length, 'Comment'), '')
                      &nbsp;
                      |
                      &nbsp;
                      = link_to('Add', new_board_item_comment_path(@board, item))
                    .col-sm-6                  
                      = pluralize(item.votes.length, 'vote')                      
                      &nbsp;
                      |
                      &nbsp;
                      = link_to('Vote Up', new_board_item_vote_path(@board, item))
